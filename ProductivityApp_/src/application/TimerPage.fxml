<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.TimerController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" text="TIMER!" textAlignment="CENTER">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <font>
            <Font size="47.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </Label>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Label alignment="CENTER" prefHeight="36.0" prefWidth="100.0" text="Set Time:" textAlignment="CENTER">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <TextField id="hourText" fx:id="hourText" prefHeight="26.0" prefWidth="50.0" text="00" />
            <TextField id="minutesText" fx:id="minutesText" prefHeight="26.0" prefWidth="50.0" text="00" />
            <TextField id="secondsText" fx:id="secondsText" prefHeight="26.0" prefWidth="50.0" text="00" />
         </children>
      </HBox>
      <Button id="startTimerButton" fx:id="startTimerButton" alignment="CENTER" mnemonicParsing="false" onAction="#startTimerHandler" prefHeight="28.0" prefWidth="92.0" text="Start Timer" />
      <Label id="timerLabel" fx:id="timerLabel" text="00:00:00">
         <VBox.margin>
            <Insets top="100.0" />
         </VBox.margin>
         <font>
            <Font size="26.0" />
         </font>
      </Label>
   </children>
</VBox>
